# SPDX-License-Identifier: (Apache-2.0 OR MIT)

# Create temporary file with list of MUP functions and methods
cat mup.functions mup.methods > mup.pre

#===========================================================================
# generate C imples for multiprecision _pre functions
#===========================================================================

FOUT=mup_pre.c

cat > $FOUT <<@

/*** DO NOT EDIT THIS FILE DIRECTLY (use $0 to generate) ***/

#include "_hypre_krylov.h"

@

# Generate copyright header
../config/write_header.sh >> $FOUT

# Generate imples
../config/gen_pre_imples.sh mup.pre HYPRE_krylov.h _hypre_krylov.h >> $FOUT

#===========================================================================
# generate C protos for external multiprecision _pre functions
#===========================================================================

FOUT=mup_pre_external.h

cat > $FOUT <<@

/*** DO NOT EDIT THIS FILE DIRECTLY (use $0 to generate) ***/

@

# Generate copyright header
../config/write_header.sh >> $FOUT

# Generate protos
../config/gen_pre_protos.sh mup.pre HYPRE_krylov.h >> $FOUT

#===========================================================================
# generate C protos for internal multiprecision _pre functions
#===========================================================================

FOUT=mup_pre_internal.h

cat > $FOUT <<@

/*** DO NOT EDIT THIS FILE DIRECTLY (use $0 to generate) ***/

@

# Generate copyright header
../config/write_header.sh >> $FOUT

# Generate protos
../config/gen_pre_protos.sh mup.pre _hypre_krylov.h >> $FOUT

