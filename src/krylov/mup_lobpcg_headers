# generate header file for transforming multiprecision function names

#===========================================================================
# Create external header file
#===========================================================================

MUP_HEADER=HYPRE_lobpcg_mup.h

cat > $MUP_HEADER <<@

/*** DO NOT EDIT THIS FILE DIRECTLY (use $0 to generate) ***/

#ifndef HYPRE_LOBPCG_MUP_HEADER
#define HYPRE_LOBPCG_MUP_HEADER

#ifdef __cplusplus
extern "C" {
#endif

#if defined (HYPRE_MIXED_PRECISION)
@

cat mup_lobpcg_fixed_ext.h      >> $MUP_HEADER
cat mup_lobpcg_functions_ext.h  >> $MUP_HEADER
cat mup_lobpcg_pre_ext.h        >> $MUP_HEADER

cat >> $MUP_HEADER <<@

#endif

#ifdef __cplusplus
}
#endif

#endif

@

rm -f mup_lobpcg_fixed_ext.h mup_lobpcg_functions_ext.h mup_lobpcg_pre_ext.h

#===========================================================================
# Create internal header file
#===========================================================================

MUP_HEADER=_hypre_lobpcg_mup.h

cat > $MUP_HEADER <<@

/*** DO NOT EDIT THIS FILE DIRECTLY (use $0 to generate) ***/

#ifndef hypre_LOBPCG_MUP_HEADER
#define hypre_LOBPCG_MUP_HEADER

#ifdef __cplusplus
extern "C" {
#endif

#if defined (HYPRE_MIXED_PRECISION)
@

cat mup_lobpcg_fixed_int.h      >> $MUP_HEADER
cat mup_lobpcg_functions_int.h  >> $MUP_HEADER
cat mup_lobpcg_pre_int.h        >> $MUP_HEADER

cat >> $MUP_HEADER <<@

#endif

#ifdef __cplusplus
}
#endif

#endif

@

rm -f mup_lobpcg_fixed_int.h mup_lobpcg_functions_int.h mup_lobpcg_pre_int.h

